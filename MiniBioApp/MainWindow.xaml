<Window x:Class="MiniBioApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="LightGray" Margin="10">
            <Button Content="Page 1" Click="Button_Click_Page1" Width="100"/>
            <Button Content="Page 2" Click="Button_Click_Page2" Width="100"/>
            <Button Content="Page 3" Click="Button_Click_Page3" Width="100"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
