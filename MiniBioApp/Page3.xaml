<Page x:Class="MiniBioApp.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiniBioApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid Background="White">
        <StackPanel Margin="20">
            <TextBlock Text="Welcome to Page 3: Contact Form" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Message:"/>
            <TextBox x:Name="MessageTextBox" Height="100" Margin="0,0,0,10" AcceptsReturn="True"/>

            <Button Content="Submit" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
